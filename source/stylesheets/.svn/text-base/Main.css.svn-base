/*************************************
	Money
**************************************/

.red {
	color: #FF0000;
}

.green {
	color: #53b66b;
}


.tickerListBox {
	background: #e5e6e8;
	border-radius: 5px;
	font-size: 16px;
	margin: 10px 5px;
	padding: 5px;
}

.tickerListBox .tickerTitle {
	font-weight: bold;
	height: 25px;
	margin: 0 10px;
}

.tickerListBox .tickerItem {
	font-size: 16px;
	padding: 8px 3px 5px 14px;
	height: 45px;
}

.tickerListBox .tinyDescription {
	color: #666;
	font-size: 14px;
	margin: 0 5px;
}

.tickerListBox .moveButton {
	min-height: 10px;
	padding: 0;
	margin: 0;
	min-width: 25px;	
}

.tickerListBox .upArrow {
	background-image: url('../images/markets_upArrow.png');
	background-repeat: no-repeat;
	background-position: 0px 0px;
	width: 14px;
	height: 22px;
}

.tickerListBox .itemValue {
	font-weight: bold;
	text-align: right;
	padding-right: 5px;
}

.companyName {
	font-weight: bold;
	font-size: 18px;
	margin: 0 0 0 5px;
}

.tickerSymbol {
	font-size: 16px;
	margin: 0 0 0 5px;
}

.tickerValuesBox {
	margin: 5px;
	padding-top: 10px;
	border-top: 1px solid #ccc;
}

.tickerValueTitle {
	font-size: 12px;
}

.tickerValue {
	font-weight: bold;
	font-size: 24px;
}
